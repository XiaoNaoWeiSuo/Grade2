<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainwidget"
    android:layout_width="250dp"
    android:layout_height="180dp"
    
    android:padding="10dp"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:gravity="center">
    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="75dp"
        android:background="@drawable/second"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:gravity="center">
        <!-- 左侧时间 -->
        <TextView
            android:id="@+id/FirstTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="=="
            android:textColor="@android:color/white"
            android:textSize="14sp" />
        <!-- 右侧垂直布局 -->
        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <!-- 课程名称 -->
            <TextView
                android:id="@+id/FirstCourseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="暂无数据"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
            <!-- 上课地点 -->
            <TextView
                android:id="@+id/FirstPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="========="
                android:textColor="@android:color/white"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="75dp"
        android:layout_weight="1"
        android:background="@drawable/thrid"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:gravity="center">
        <!-- 左侧时间 -->
        <TextView
            android:id="@+id/SecondTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="=="
            android:textColor="#FFF6F6"
            android:textSize="14sp" />
        <!-- 右侧垂直布局 -->
        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <!-- 课程名称 -->
            <TextView
                android:id="@+id/SecondCourseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="暂无数据"
                android:textColor="#FFF6F6"
                android:textSize="16sp" />
            <!-- 上课地点 -->
            <TextView
                android:id="@+id/SecondPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="========="
                android:textColor="#FFF6F6"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
